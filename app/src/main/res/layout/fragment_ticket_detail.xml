<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ticketDetail_FragmentGridLayout">

        <TableRow>
            <!-- Title -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#FF000000"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:id="@+id/title"
                android:text="@string/ticketDetail_title"
                android:layout_gravity="top|left"/>
        </TableRow>

        <TableRow>
            <!-- Ticket code -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketCodeLabel"
                android:id="@+id/ticketCodeLabel"
                android:textColor="#FF909090"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketCode"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Ticket status -->

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketStatusLabel"
                android:id="@+id/ticketStatusLabel"
                android:textColor="#FF909090"
                android:layout_row="3"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketStatus"
                android:layout_row="3"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Ticket category -->

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketCategoryLabel"
                android:id="@+id/ticketCategoryLabel"
                android:textColor="#FF909090"
                android:layout_row="4"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketCategory"
                android:layout_row="4"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Ticket subcategory -->

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketSubcategoryLabel"
                android:id="@+id/ticketSubcategoryLabel"
                android:textColor="#FF909090"
                android:layout_row="5"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketSubcategory"
                android:layout_row="5"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Ticket building -->

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketBuildingLabel"
                android:id="@+id/ticketBuildingLabel"
                android:textColor="#FF909090"
                android:layout_row="6"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketBuilding"
                android:layout_row="6"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Floor -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketFloorLabel"
                android:id="@+id/ticketFloorLabel"
                android:textColor="#FF909090"
                android:layout_row="7"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketFloor"
                android:layout_row="7"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Office -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketOfficeLabel"
                android:id="@+id/ticketOfficeLabel"
                android:textColor="#FF909090"
                android:layout_row="8"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketOffice"
                android:layout_row="8"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Ticket reporter -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketReporterLabel"
                android:id="@+id/ticketDetail_reporterLabel"
                android:textColor="#FF909090"
                android:layout_row="9"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketReporter"
                android:layout_row="9"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Ticket manager -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketManagerLabel"
                android:id="@+id/ticketManagerLabel"
                android:textColor="#FF909090"
                android:layout_row="10"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketManager"
                android:layout_row="10"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Company -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketCompanyLabel"
                android:id="@+id/ticketCompanyLabel"
                android:textColor="#FF909090"
                android:layout_row="11"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketCompany"
                android:layout_row="11"
                android:layout_column="1"
                android:gravity="end"
                android:layout_gravity="top|left"/>
        </TableRow>

        <!-- Description -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticketDetail_ticketDescriptionLabel"
                android:id="@+id/ticketDescriptionLabel"
                android:textColor="#FF909090"
                android:layout_column="0"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:layout_gravity="top|start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:id="@+id/ticketDetail_ticketDescription"
                android:layout_column="1"
                android:gravity="start"
                android:layout_gravity="top|start"
                android:clickable="true"/>
        </TableRow>
    </TableLayout>
</ScrollView>