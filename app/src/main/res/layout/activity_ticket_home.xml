<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="org.ec.androidticket.activities.home.TicketHomeActivity"
                android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/ticket_home_header_text"
        android:id="@+id/ticketHomeHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center|center_horizontal"
        android:layout_alignParentEnd="false"
        android:elegantTextHeight="false"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ticket_home_create_ticket_button_label"
        android:id="@+id/homeCreateTicketButton"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ticketsContainer"
        android:fillViewport="false"
        android:layout_gravity="top"/>
</LinearLayout>
